# Environment
NODE_ENV=production

# Server Port
PORT=5001

# MongoDB Atlas Connection
# Get from: MongoDB Atlas → Database → Connect → Connect your application
# Important: URL encode special characters in password (@ becomes %40)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# JWT Secret (Keep this secure!)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_secure_random_jwt_secret_key_here

# Frontend URL (Update with your deployed frontend URL)
CLIENT_URL=https://your-frontend-url.netlify.app

# Admin Email
ADMIN_EMAIL=your_admin_email@example.com
